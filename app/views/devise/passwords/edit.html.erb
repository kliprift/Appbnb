<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
   
    <h2>Edit Your Password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
      
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.password_field :password, autofocus: true, :class => "form-control", placeholder: "New Password", autocomplete: "off" %>
       </div>

       <div class="form-group">
          <%= f.password_field :password, autofocus: true, :class => "form-control", placeholder: "Confirm Password", autocomplete: "off" %>
       </div>

          <%= f.submit "Reset Password", :class => "btn btn-danger" %>
    <% end %>
       
  </div>
</div>


